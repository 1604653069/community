<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--左边图片布局-->
        <ImageView
            android:id="@+id/item_house_img"
            android:src="@mipmap/empty_tuikuan"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <!--右边详细信息布局-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_house_title"
                android:textColor="#0b0f12"
                android:text="合租"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_house_address"
                android:textColor="#676c72"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:text="1室 20江夏小区"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--动态添加房屋类型-->
            <LinearLayout
                android:layout_marginTop="7dp"
                android:id="@+id/item_house_type"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="3dp"
                    android:background="@drawable/tv_house"
                    android:textSize="15sp"
                    android:text="有电梯"
                    android:textColor="#7cafe8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/item_house_rent"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textColor="#fd4d36"
                android:text="450元/月"
                android:textSize="23sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>