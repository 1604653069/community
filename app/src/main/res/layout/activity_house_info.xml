<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".activity.HouseInfoActivity">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <com.youth.banner.Banner
                    android:id="@+id/house_banner"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                </com.youth.banner.Banner>
                <ImageView
                    android:id="@+id/house_back"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/back"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
        </FrameLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/house_rent"
                 android:textStyle="bold"
                 android:textSize="25sp"
                 android:text="600元/月"
                 android:textColor="#f00"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="押一付一"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:id="@+id/house_detail"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/house_date"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/favorite_house"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/good_uncollected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/house_type"
                    android:text="1室1厅1卫"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/house_area"
                    android:text="45㎡"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="中/12层"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="南"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:text="房型"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="面积"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="楼层"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="朝向"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textColor="#7cafe8"
            android:textSize="15sp"
            android:background="@drawable/tv_house"
            android:layout_marginLeft="10dp"
            android:text="近地铁"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:textColor="#7cafe8"
                    android:textSize="15sp"
                    android:background="@drawable/tv_house"
                    android:layout_marginLeft="10dp"
                    android:text="有电梯"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:textColor="#7cafe8"
                    android:textSize="15sp"
                    android:background="@drawable/tv_house"
                    android:layout_marginLeft="10dp"
                    android:text="精装修"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:text="房屋设备"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <GridView
            android:id="@+id/house_sb"
            android:numColumns="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </GridView>
      <!--  <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_bg"
            android:textColor="#fff"
            android:text="联系Ta"
            android:id="@+id/btn_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->
</LinearLayout>