<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/head"/>
    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <LinearLayout
        android:background="#fff"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/tab_mine_normal"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/edit_name"
            android:layout_marginLeft="3dp"
            android:gravity="left|center"
            android:hint="请输入联系人名称"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#ccc"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="#fff"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/icon_phone_num"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/edit_phone"
            android:layout_marginLeft="3dp"
            android:gravity="left|center"
            android:hint="请输入手机号"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <LinearLayout
        android:background="#fff"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/address_manage" />
        <EditText
            android:id="@+id/edit_address"
            android:layout_marginLeft="3dp"
            android:gravity="left|center"
            android:hint="请选择区域"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#ccc"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="#fff"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/icon_my_estate"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/edit_address_xx"
            android:layout_marginLeft="3dp"
            android:gravity="left|center"
            android:hint="请输入详细地址"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center|left"
            android:background="#fff"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <TextView
                android:textSize="18sp"
                android:textColor="#f00"
                android:text="设为默认地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
           <CheckBox
               android:id="@+id/img_switch"
               style="@style/checkBoxStyle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:enabled="false"
            android:id="@+id/btn_save"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:background="@drawable/btn_bg_enable_press"
            android:text="保存"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>