<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    >
    <LinearLayout
        android:padding="3dp"
        android:orientation="horizontal"
        android:background="@drawable/pla_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/water_item_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/icon_water" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ccc"
            android:layout_width="0.5dp"
            android:layout_height="match_parent">
        </View>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:lineSpacingExtra="7dp"
                android:letterSpacing="0.1"
                android:id="@+id/water_item_name"
                android:textSize="20sp"
                android:text="缴费人:张三"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:lineSpacingExtra="7dp"
                android:letterSpacing="0.1"
                android:id="@+id/water_item_month"
                android:layout_marginTop="10dp"
                android:text="月份:11.1-12.1"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:lineSpacingExtra="7dp"
                   android:letterSpacing="0.1"
                   android:text="缴费金额:"
                   android:textSize="20sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:id="@+id/water_item_money"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="10dp"
                   android:letterSpacing="0.1"
                   android:lineSpacingExtra="7dp"
                   android:text="100.00"
                   android:textColor="#f00"
                   android:textSize="20sp" />
           </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/water_item_btn"
                    android:textColor="#fff"
                    android:background="@drawable/pay_btn_select"
                    android:text="去缴费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>